<%= @radio_question.title %>
<%= form_tag(controller: "answers", action: "create", method: "post") do %>
    <%= hidden_field_tag :question_id, @radio_question.id %>
    <%= hidden_field_tag :user_id, current_user.id %>
    <%= hidden_field_tag :learning_process_state_id, @user.learning_process_states.ids %>
    <%= label_tag :first_option, @radio_question.first_option, :value => @radio_question.first_option %>
    <%= radio_button_tag :answer, @radio_question.first_option %>
    <%= label_tag :second_option, @radio_question.second_option, :value => @radio_question.second_option %>
    <%= radio_button_tag :answer, @radio_question.second_option %>
    <%= label_tag :third_option, @radio_question.third_option, :value => @radio_question.third_option %>
    <%= radio_button_tag :answer, @radio_question.third_option %>
    <%= submit_tag("Check") %>
<% end %>
